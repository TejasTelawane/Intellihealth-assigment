<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".acitivites.MainActivity"
    android:background="@color/lightgrey"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rel_countdown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:background="@drawable/rounded_background_empty">

        <TextView
            android:id="@+id/tv_Countdowntext"
            android:layout_toLeftOf="@+id/btn_fetchData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/clicktoFetchArticles"
            android:maxLines="2"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/_5sdp"
            android:textStyle="bold"
            android:textSize="@dimen/_12sdp"
            android:layout_centerVertical="true"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_fetchData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/strFetchArticles"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/_10sdp"
            android:layout_margin="@dimen/_5sdp"/>

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycle_articles"
        android:layout_below="@+id/rel_countdown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/article_item_row"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/strPleasewait"
        android:textSize="@dimen/_20sdp"
        android:layout_centerInParent="true"
        android:visibility="gone"/>





</RelativeLayout>