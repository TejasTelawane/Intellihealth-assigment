<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.interview.truemedinterview">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TruemedInterview"
        android:usesCleartextTraffic="true">
        <activity android:name=".acitivites.ArticleDetailScreen"
            android:theme="@style/Theme.TruemedInterview.NoActionBar"></activity>
        <activity
            android:name=".acitivites.MainActivity"
            android:theme="@style/Theme.TruemedInterview.NoActionBar" />
        <activity
            android:name=".acitivites.SplashScreen"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.TruemedInterview.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>